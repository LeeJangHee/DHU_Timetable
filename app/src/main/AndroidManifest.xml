<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dhu_timetable">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_timetable"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_timetable_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:name="androidx.multidex.MultiDexApplication"
        android:theme="@style/Theme.DHU_Timetable">
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-9700414008733720~8736405806"/>
        <activity
            android:name=".ui.main.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/Theme.DHU_Timetable.NoActionBar">
        </activity>
        <activity
            android:name=".ui.loading.LoadingActivity"
            android:theme="@style/Theme.Design.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.login.LoginActivity"
            android:theme="@style/Theme.Design.NoActionBar" >
        </activity>
        <activity android:name=".ui.search.SearchActivity" />
        <activity android:name=".ui.navitem.notice.NoticeActivity" />
        <activity android:name=".ui.navitem.BugreportActivity" />
        <activity android:name=".ui.navitem.LicenseActivity" />
    </application>

</manifest>